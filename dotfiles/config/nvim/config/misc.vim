" Misc. Settings
" -----------------------------------------------------------------------------

" Indent Settings
set autoindent
set smartindent

" Tab Settings
set expandtab
set smarttab
set softtabstop=2
set shiftwidth=2

" Show whitespace in files.
set listchars=eol:¬,tab:>·,trail:~,extends:>,precedes:<,space:␣

" Try to keep 2 lines above/below the current line in view for context.
set scrolloff=5

